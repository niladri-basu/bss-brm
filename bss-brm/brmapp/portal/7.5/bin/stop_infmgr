#

#
# stop_infmgr
#
# run this BEFORE stopping the underlying database (if any)
#
VERSION=7.5
PATH=/usr/bin:/bin

INFMGR=infmgr
LOGDIR=/brmapp/portal/7.5/var/infmgr
INFMGRPID=${LOGDIR}/infmgr.pid

me=$0

if [ ! -f ${INFMGRPID} ]; then
	echo "${me}: ERROR: no pid file: ${INFMGRPID}, cannot kill \"${INFMGR}\""
        exit 1
fi       

kill `cat ${INFMGRPID}`
rc=$?
if [ ${rc} -ne 0 ]; then
	echo "${me}: ERROR: kill ${INFMGR} `cat ${INFMGRPID}` FAILED"
	exit ${rc}
else
	rm ${INFMGRPID}
fi

exit 0
