#
# stop_dm_email
#
# run this BEFORE stopping the underlying database (if any)
#
VERSION=7.5
PATH=/usr/bin:/bin

QM=dm_email
LOGDIR=/brmapp/portal/7.5/var/dm_email
QMPID=${LOGDIR}/dm_email.pid

me=$0

if [ ! -f ${QMPID} ]; then
	echo "${me}: ERROR: no pid file: ${QMPID}, cannot kill \"${QM}\""
        exit 1
fi       

kill `cat ${QMPID}`
rc=$?
if [ ${rc} -ne 0 ]; then
	echo "${me}: ERROR: kill ${QM} `cat ${QMPID}` FAILED"
	exit ${rc}
else
	rm ${QMPID}
fi

exit 0
