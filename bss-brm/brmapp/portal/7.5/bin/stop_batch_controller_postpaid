PINDIR=/brmapp/portal/7.5
PATH=/usr/bin:/bin

#LOGDIR=${PINDIR}/TD/apps/batch_controller_postpaid
LOGDIR=/var/portal/batch_controller_postpaid
BCPID=${LOGDIR}/BatchController_postpaid.pid

me=$0

if [ ! -f ${BCPID} ]; then
	echo "${me}: ERROR: ${BCPID}: No such file or directory"
	echo "${me}: ERROR: Cannot kill \"BatchController_postpaid\""
        exit 1
fi       

kill `cat ${BCPID}`
rc=$?
if [ ${rc} -ne 0 ]; then
	echo "${me}: ERROR: BatchController_postpaid: kill `cat ${BCPID}` FAILED"
	exit ${rc}
else
	echo "${me}: BatchController_postpaid: kill `cat ${BCPID}` SUCCEEDED"
	rm ${BCPID}
fi

exit 0
