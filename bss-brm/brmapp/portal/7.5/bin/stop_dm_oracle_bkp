#       licensors and may be used, reproduced, stored or transmitted only in
#       accordance with a valid Oracle license or sublicense agreement.
#

#
# stop_dm_oracle
#
# run this BEFORE stopping the underlying database (if any)
#
VERSION=7.5
PATH=/usr/bin:/bin

DM=dm_oracle

LOGDIR=/brmapp/portal/7.5/var/dm_oracle
DMPID=${LOGDIR}/dm_oracle.pid

me=$0

if [ ! -f ${DMPID} ]; then
	echo "${me}: ERROR: no pid file: ${DMPID}, cannot kill \"${DM}\""
        exit 1
fi       

kill `cat ${DMPID}`
rc=$?
if [ ${rc} -ne 0 ]; then
	echo "${me}: ERROR: kill ${DM} `cat ${DMPID}` FAILED"
	exit ${rc}
else
	rm ${DMPID}
fi

exit 0
